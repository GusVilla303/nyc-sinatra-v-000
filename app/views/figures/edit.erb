<h1> Update or Edit a Figure </h1>

<form action="/figures/<%=@figure.id%>" method="POST">

  <label for="figure_name">Name:</label>
  <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>">

  <br></br>

  <% Title.all.each do |title| %>
    <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>" <%= 'checked' if @figure.titles.include?(title)%> ><%= title.name %></input>
  <% end %>

  <br></br>

  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id%>"><%= landmark.name %></input>
  <% end %>

  <br></br>

  <label for="new_landmark">Landmark:</label>
  <input type="text" id="new_landmark" name="landmark[name]">

  <br></br>

  <label for="new_title">Title:</label>
  <input type="text" id="new_title" name="title[name]">
  <br></br>


  <input type="submit" value="Update Figure">
</form>
